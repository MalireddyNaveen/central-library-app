<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Book"
    >
        <beginButton>
            <Button
                id="idCreateBookButton"
                text="Create"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idTitleLabel"
                    text="Title"
                />
                <Input
                    id="idTitleInput"
                    value="{localModel>/title}"
                />
                <Label
                    id="idISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idISBNInput"
                    value="{localModel>/ISBN}"
                />
                <Label
                    id="idQuantityLabel"
                    text="Quantity"
                />
                <Input
                    id="idQuantityInput"
                    value="{localModel>/quantity}"
                />
                <Label
                    id="idAuthorLabel"
                    text="Author"
                />
                <Input
                    id="idAuthorInput"
                    value="{localModel>/author}"
                />
                <Label
                    id="idGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idGenreInput"
                    value="{localModel>/genre}"
                />
                <Label
                    id="idPublisherLabel"
                    text="Publisher"
                />
                <Input
                    id="idPublisherInput"
                    value="{localModel>/publisher}"
                />
                <Label
                    id="idLanguageLabel"
                    text="Language"
                />
                <Input
                    id="idLanguageInput"
                    value="{localModel>/language}"
                />
                <!-- <Label
                    id="idPriceLabel"
                    text="Price"
                />
                <Input
                    id="idPriceInput"
                    value="{localModel>/price}"
                /> -->
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>