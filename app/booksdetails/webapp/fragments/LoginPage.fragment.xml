<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idloginDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Login Details"
    >
        <customHeader>
            <Bar>
            <contentLeft>
            <Text text="Login Details"></Text>
            </contentLeft>
                <contentRight>
                    <Button
                        id="cancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="onCloseDialog"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            class="cancelbtn"
            alignItems="End"
        />
        <VBox
            class="sapUiSmallMargin"
            alignItems="Center"
        >
            <form:SimpleForm
                id="idSimpleForm"
                layout="ResponsiveGridLayout"
            >
                <form:content>
                    <Title
                        class="login"
                        text="Login Details"
                        textAlign="Center"
                    />
 
                    <Label
                        class="username"
                        text="Username"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="user"
                        placeholder="Enter Username"
                        width="80%"
                        textAlign="Initial"
                    />
 
                    <Label
                        class="password"
                        text="Password"
                        textAlign="Initial"
                    />
                    <Input
                        id="pwd"
                        type="Password"
                        placeholder="Enter Password"
                        width="80%"
                        textAlign="Initial"
                    />
                    <core:Title />
                    <VBox
                        alignItems="Center"
                        class="sapUiSmallMarginTop"
                    >
                        <Button
                            icon="sap-icon://visits"
                            id="btn"
                            text="Login"
                            type="Accept"
                            width="100%"
                            press="onBtnClick"
                        />
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </VBox>
    </Dialog>
</core:FragmentDefinition>