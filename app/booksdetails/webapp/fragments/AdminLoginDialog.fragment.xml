<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateAdminLoginDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Book"
    >
        
        <content>
            <form:SimpleForm id="idSimpleForm" layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="Username" textAlign="Initial"/>
                    <Input
                        class="input"
                        id="user"
                        placeholder="Enter Username"
                        width="80%"
                        textAlign="Initial"
                    />
               
                    <Label text="Password" textAlign="Initial"/>
                    <Input
                        id="pwd"
                        type="Password"
                        placeholder="Enter Password"
                        width="80%"
                        textAlign="Initial"
                    />
                    <core:Title/>
                    <VBox alignItems="Center" class="sapUiSmallMarginTop">
                        <Button
                            icon="sap-icon://visits"
                            id="btn"
                            text="Login"
                            type="Accept"
                            width="100%"
                            press="onBtnClick"
                        />
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>