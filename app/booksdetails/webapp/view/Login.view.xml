<mvc:View
    controllerName="com.app.booksdetails.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        class="background-image"
        title="{i18n>title}"
    >
        <VBox class="sapUiSmallMargin" alignItems="Center">
            <Title
                id="__xmlview0--title"
                text="Login Details"
                textAlign="Center"
            />
            <form:SimpleForm id="idSimpleForm" layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="Username" textAlign="Initial"/>
                    <Input
                        class="input"
                        id="user"
                        placeholder="Enter Username"
                        width="80%"
                        textAlign="Initial"
                    />
               
                    <Label text="Password" textAlign="Initial"/>
                    <Input
                        id="pwd"
                        type="Password"
                        placeholder="Enter Password"
                        width="80%"
                        textAlign="Initial"
                    />
                    <core:Title/>
                    <VBox alignItems="Center" class="sapUiSmallMarginTop">
                        <Button
                            icon="sap-icon://visits"
                            id="btn"
                            text="Login"
                            type="Accept"
                            width="100%"
                            press="onBtnClick"
                        />
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </VBox>
    </Page>
</mvc:View>