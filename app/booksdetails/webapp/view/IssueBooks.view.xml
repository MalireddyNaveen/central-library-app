<mvc:View
    xmlns:tnt="sap.tnt"
    controllerName="com.app.booksdetails.controller.IssueBooks"
    
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <!-- <List id="idUserLoans" items="{path:'/BooksLoan'}">
    <StandardListItem  id="ss" title="{users}" counter="{users}"></StandardListItem>
    </List> -->
    <Table
        id="idIssueBooks"
         
        alternateRowColors="true"
        backgroundDesign="Transparent"
        mode="MultiSelect"
        items="{/IssueBooks}"
       
    >
     
     <!-- Header Tool Bar-->
        <headerToolbar>
            <OverflowToolbar id="idOverflowToolbar">
                <Title
                    id="idUserLoanTitle"
                    text="Issue Books"
                />
                <ToolbarSpacer id="idtoolbar" />

                <Button
                    id="idbutton"
                    type="Accept"
                    text="Accept"
                    press="onAcceptReservedBook"
                />
                
            </OverflowToolbar>
        </headerToolbar>

        <columns>
            <Column id="idBookIdColumn">
                <Title
                    id="idBookIdtitle"
                    text="BookID"
                />
            </Column>
            <Column id="idISBNColumn">
                <Title
                    id="idISBNtitle"
                    text="ISBN"
                />
            </Column>
            <Column id="idTitleColumn">
                <Title
                    id="idTitletitle"
                    text="Title"
                />
            </Column>
            <Column id="idUserIdColumn">
                <Title
                    id="idUserIdtitle"
                    text="UserID"
                />
            </Column>
             <Column id="idUserNameColumn">
                <Title
                    id="idUserNametitle"
                    text="UserName"
                />
            </Column>
            <Column id="idRequestedDateColumn">
                <Title
                    id="idRequestDatetitle"
                    text="Request Date"
                />
            </Column>

            <!-- <Column id="iddueColumn">
                <Title
                    id="idduetitle"
                    text="Issue Date"
                />
            </Column> -->
            <!-- <Column id="idbodColumn">
                <Title
                    id="idbodtitle"
                    text="Due Date"
                />
            </Column> -->
        </columns>

        <items>
            <ColumnListItem id="idColumnListBooksLoan">
                <cells>
                    <Text
                        id="idBISBNvalue"
                        text="{book/ID}"
                    />
                    <Text
                        id="idBookTilevalue"
                        text="{book/ISBN}"
                    />
                    <Text
                        id="idBookISBNvalue"
                        text="{book/title}"
                    />
                    <Text
                        id="idBUserIDvalue"
                        text="{user/ID}"
                    />
                     <Text
                        id="idBUserNamevalue"
                        text="{user/userName}"
                    />
                   
                    <Text
                        id="idIssuevalue"
                        text="{reservedDate}"
                    />
                    <!-- <Text
                        id="idduevalue"
                        text="{dueDate}"
                    /> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>