<mvc:View
    xmlns:tnt="sap.tnt"
    controllerName="com.app.booksdetails.controller.ActiveLoans"
    
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <!-- <List id="idUserLoans" items="{path:'/BooksLoan'}">
    <StandardListItem  id="ss" title="{users}" counter="{users}"></StandardListItem>
    </List> -->
    <Table
        id="idUserLoans"
         
        alternateRowColors="true"
        backgroundDesign="Transparent"
        mode="MultiSelect"
        items="{ path:'/ActiveLoans',  parameters : {
            $count : true
        }}"
    >
     
     <!-- Header Tool Bar-->
        <headerToolbar>
            <OverflowToolbar id="idOverflowToolbar">
                <Title
                    id="idUserLoanTitle"
                    text="{/ActiveLoans/$count} Active Loans"
                />
                <ToolbarSpacer id="idtoolbar" />

                <Button
                    id="idbutton"
                    type="Accept"
                    text="Close Loan"
                    press="onCloseLoan"
                />
                <!-- <Button
                    id="idEditbutton"
                    type="Emphasized"
                    icon="sap-icon://edit"
                />
                <Button
                    id="idDeletebutton"
                    type="Reject"
                    icon="sap-icon://delete"
                /> -->
            </OverflowToolbar>
        </headerToolbar>

        <columns>
            <Column id="idIsbnColumn">
                <Title
                    id="idIsbntitle"
                    text="ISBN"
                />
            </Column>
            <Column id="idBookTitleColumn">
                <Title
                    id="idBookTitletitle"
                    text="BookTitle"
                />
            </Column>
            <Column id="idUserColumn">
                <Title
                    id="idUsertitle"
                    text="UserName"
                />
            </Column>
            <!-- <Column id="idBooksColumn">
                <Title
                    id="idBookstitle"
                    text="BooksISBN"
                />
            </Column> -->

            <Column id="iddueColumn">
                <Title
                    id="idduetitle"
                    text="Issue Date"
                />
            </Column>
            <Column id="idbodColumn">
                <Title
                    id="idbodtitle"
                    text="Due Date"
                />
            </Column>
        </columns>

        <items>
            <ColumnListItem id="idColumnListBooksLoan">
                <cells>
                    <Text
                        id="idBISBNvalue"
                        text="{bookId/ISBN}"
                    />
                    <Text
                        id="idBookTitlevalue"
                        text="{bookId/title}"
                    />
                    <Text
                        id="idBUservalue"
                        text="{userId/userName}"
                    />
                   
                    <Text
                        id="idIssuevalue"
                        text="{issueDate}"
                    />
                    <Text
                        id="idduevalue"
                        text="{dueDate}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>